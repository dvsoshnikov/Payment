<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/productButton1"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:layout_marginStart="64dp"
        android:backgroundTint="@color/md_theme_light_primary"
        android:elevation="5dp"
        android:fontFamily="@font/roboto_light"
        android:text="Продукт 1"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:translationZ="5dp"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@+id/productButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904" />

    <Button
        android:id="@+id/productButton2"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:layout_marginStart="64dp"
        android:backgroundTint="@color/md_theme_light_primary"
        android:elevation="5dp"
        android:fontFamily="@font/roboto_light"
        android:text="Продукт 2"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:translationZ="5dp"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/productButton3"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:layout_marginStart="64dp"
        android:backgroundTint="@color/md_theme_light_primary"
        android:elevation="5dp"
        android:fontFamily="@font/roboto_light"
        android:text="Продукт 3"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:translationZ="5dp"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productButton2"
        app:layout_constraintVertical_bias="0.09" />

</androidx.constraintlayout.widget.ConstraintLayout>